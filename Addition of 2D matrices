//Write a program to implement 2D array 
#include <stdio.h>
int main()
{
    int arr1[100][100],arr2[100][100],res[100][100],m,n,i,j;
    printf("\nEnter the number of rows:");
    scanf("%d",&m);
    printf("\nEnter the number of Columns:");
    scanf("%d",&n);
    printf("\nEnter The elements of array1:");
    for(i=0;i<m;i++)
    {
      for(j=0;j<n;j++)
    {
      scanf("%d",&arr1[i][j]);  
    }
    }
    printf("\nEnter The elements of array2:");
    for(i=0;i<m;i++)
    {
      for(j=0;j<n;j++)
    {
      scanf("%d",&arr2[i][j]);  
    }
    }
    for(i=0;i<m;i++)
    {
      for(j=0;j<n;j++)
    {
      res[i][j]=arr1[i][j]+arr2[i][j];  
    }
    }
    printf("\nPrinting Result Array elements Below\n");
     for(i=0;i<m;i++)
    {
      for(j=0;j<n;j++)
    { 
        printf("%d",res[i][j]);
    }
    printf("\n");
    return 0;
}
}
